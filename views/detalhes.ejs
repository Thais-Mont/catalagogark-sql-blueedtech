<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <%- include('./components/head') %>
    <title>GARK-Detalhes</title>
  </head>

    <header>
      <nav>
        <%- include('./components/nav') %>
    </header>

    <section id="faixa-titulo">
      <div>DETALHES...</div>
    </section>

    <main>

      <section id="detalhes-produtos">
        <div class="imagem-produto">
          <img src= "<%= produto.imagem %>" alt="imagem-produto" />
        </div>

          <div class="infos-produto">
            <h2 id="titulo"><%= produto.nome %></h2>
            <p class="infos"><%= produto.dimensoes %></p>
            <p class="infos"><%= produto.descricao %></p>
            <p class="preço">R$ <%= produto.preco %>0 / m²</p>
          </div>
      </section>
    </main>

    <%- include('./components/footer') %>

    <script src="js/script.js"></script>
    
  </body>
</html>
