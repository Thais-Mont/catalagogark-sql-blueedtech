<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <%- include('./components/head') %>
    <title>GARK-Cadastro</title>
  </head>

    <header>
      <%- include('./components/nav') %>
    </header>

    <section id="faixa-titulo">
      <div>CADASTRO DE PRODUTOS</div>
    </section>

    <main>
      <section id="cadastro-produtos">
        <div class="imagem-cadastro">
          <img src="/img-banner/imagem02.jpg" alt="imagem-cadastro" />
        </div>

        <div class="form-cadastro">
          <form action="/create" method="post" id="cadastro">

            <div class="label-form">
              <label for="nome">Nome do Produto: </label>
              <input type="text" name="nome" id="nome" required />
            </div>

            <div class="label-form">
              <label for="dimensao">Dimensões (LxA): </label>
              <input type="text" name="dimensao" id="dimensao" required />
            </div>

            <div class="label-form">
              <label for="descricao">Descrição </label>
              <input type="text" name="descricao" id="descricao" required />
            </div>

            <div class="label-form">
              <label for="preco">Preço R$: </label>
              <input type="number" step="any" name="preco" id="preco" required />
            </div>

            <div class="label-form">
              <label for="imagem">Link da Imagem: </label>
              <input type="text" name="imagem" id="imagem" required />
            </div>

            <div id="btn">
              <button id="btnCadastro" type="submit">Cadastrar</button>
            </div>

          </form>
        </div>

      </section>
    </main>

    <%- include('./components/footer') %>

    <script src="js/script.js"></script>
    
  </body>
</html>
